<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<BorderPane  style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.pankaj.asteroids.home.Home">
   <center>
      <ImageView pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assets/Battlestar-Gallectica-bg-transparent.png" />
         </image>
      </ImageView>
   </center>
   <bottom>
      <HBox alignment="TOP_CENTER" spacing="40.0" BorderPane.alignment="TOP_CENTER">
         <children>
            <Button fx:id="start_game_btn" alignment="CENTER" mnemonicParsing="false" onAction="#handle_start_game" prefHeight="40.0" prefWidth="80.0" style="-fx-alignment: center;" text="PLAY" textAlignment="JUSTIFY">
               <font>
                  <Font name="Consolas" size="15.0" />
               </font>
            </Button>
            <Button fx:id="exit_game_btn" layoutX="10.0" layoutY="10.0" minHeight="40.0" minWidth="80.0" mnemonicParsing="false" onAction="#handle_exit_game" text="EXIT">
               <font>
                  <Font name="Consolas" size="15.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
